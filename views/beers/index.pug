extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Name
            th Origin
            th Brewery
            th Description
            th Tester
            if isAuthenticated
              th Actions
        
        tbody
          each beer in beers
            tr
              td
                a(href=`/beers/${beer.id}`)= beer.name
              td= beer.origin
              td= beer.brewery
              td= beer.description
              td= `${beer.tester.firstName} ${beer.tester.lastName}`
              if isAuthenticated
                td
                  a(href=`/beers/${beer.id}/edit`) edit 
                  = " | "
                  form.destroy(action="/beers/destroy", method="POST", onsubmit='return confirm("Are you sure you wanna delete this beer?");')
                    input(type="hidden", name="id", value=beer.id)
                    input(type="submit", value="delete")
